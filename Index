<script>
    // Flower rain
    const flowers = ["ğŸŒ¹","ğŸŒ¸","ğŸ’","ğŸŒº","ğŸŒ·"];

    setInterval(() => {
        const flower = document.createElement("div");
        flower.classList.add("flower");
        flower.innerText = flowers[Math.floor(Math.random() * flowers.length)];
        flower.style.left = Math.random() * 100 + "vw";
        flower.style.animationDuration = (3 + Math.random() * 5) + "s";
        document.body.appendChild(flower);

        setTimeout(() => {
            flower.remove();
        }, 8000);
    }, 300);

    // Quiz logic
    function checkAnswer() {
        const answer = document.getElementById("answer").value.toLowerCase();
        const result = document.getElementById("result");

        if (answer.includes("smile") || answer.includes("heart") || answer.includes("everything")) {
            document.getElementById("testCard").classList.remove("active");
            document.getElementById("giftCard").classList.add("active");
        } else {
            result.innerHTML = "âŒ Wrong answer ğŸ˜ˆ Try again!";
        }
    }
</script>

